<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    tools:context=".activity.DetailActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:focusable="true"
            android:id="@+id/layout3"
            >
            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="80dp"
                android:id="@+id/app_icon"
                android:background="@drawable/detail_app_icon_shape"
                >
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="30dp"
                android:text=""
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_toEndOf="@+id/app_icon"
                android:layout_alignTop="@+id/app_icon"
                android:id="@+id/app_name"
                >
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_toEndOf="@+id/app_icon"
                android:layout_below="@+id/app_name"
                android:id="@+id/app_detail"
                >
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_below="@+id/app_detail"
                android:layout_toEndOf="@+id/app_icon"
                android:id="@+id/app_info"
                >
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_toEndOf="@+id/app_icon"
                android:layout_below="@+id/app_info"
                android:id="@+id/app_labels"
                >
            </TextView>


            <Button
                android:layout_width="140dp"
                android:layout_height="70dp"
                android:layout_below="@id/app_icon"
                android:layout_alignStart="@id/app_icon"
                android:layout_marginTop="10dp"
                android:id="@+id/download_button"
                android:text="@string/download"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                android:focusable="true"
                android:enabled="true"
                android:background="@drawable/select_button_shape">

            </Button>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout4"
            tools:ignore="MissingConstraints"
            android:orientation="horizontal"
            android:layout_below="@+id/layout3"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="80dp"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:text="应用信息"
                android:textStyle="bold" >

            </TextView>
        </LinearLayout>
    </RelativeLayout>